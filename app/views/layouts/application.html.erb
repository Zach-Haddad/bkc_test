<!DOCTYPE html>
<html>
<head>
  <title>BKC Coding Challenge</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <script src="https://use.fontawesome.com/d3d6fa43ff.js"></script>
</head>
<body>
  <%= render "devise/registrations/new" %>
  <%= render "devise/sessions/new" %>
  <%= render "posts/new" %>

  <div class="wrap">

    <%= render "shared/errors" %>
    <%= render "shared/notices" %>

    <div class="navbar navbar-default">
      <div class="container">
        <div class="project-title navbar-text pull-left">
          <h4>BKC Code Sample</h4>
        </div>
        <div class="navbar-text pull-right">
          <%= link_to "Home", root_url, class:"btn btn-info" %>
          <% if current_user %>
          <%= link_to "Create Post", "#new_post", "data-toggle": "modal", class:"btn btn-success"%>
          <%= link_to "Logout", destroy_user_session_url, method: :delete, class:"btn btn-danger" %>
          <% else %>
            <%= link_to "Sign in", "#sign_in", "data-toggle": "modal", class:"btn btn-success", id:"sign_in" %>
            <%= link_to "Sign up", "#sign_up", "data-toggle": "modal", class: "btn btn-small btn-warning" %>
          <% end %>
        </div>
        <div class="user-id navbar-text pull-right">
          <% if current_user %>
          <%= "Signed in as: " + current_user.fname + " " + current_user.lname %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="main-content">
      <%= yield %>
    </div>


  </div>

  <%= render "shared/footer" %>

</body>
</html>
